{
  "name": "Occasional Idiot",
  "description": "Hide your friends' occasional idiotic posts",
  "version": "1.0",
  "manifest_version": 2,

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "content_scripts": [{
    "matches": [
      "http://facebook.com/*",
      "https://facebook.com/*",
      "http://www.facebook.com/*",
      "https://www.facebook.com/*"
    ],
    "js": ["occasionalidiot-facebook.js"]
  }],
  
  "permissions": [
    "storage"
  ]
  
}
